<?xml version="1.0" encoding="UTF-8"?>
<!-- Declares the XML version and character encoding -->

<!DOCTYPE hibernate-configuration PUBLIC
		"-//Hibernate/Hibernate Configuration DTD 3.0//EN"
		"http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<!-- Specifies the document type definition (DTD) for Hibernate configuration. 
     This ensures the configuration XML conforms to Hibernate standards. -->

<hibernate-configuration>
    <!-- Root element of the Hibernate configuration file -->

    <session-factory>
        <!-- Defines settings for creating a SessionFactory, which is responsible 
             for establishing database connections and managing Hibernate sessions -->

        <property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
        
        <!-- Specifies the JDBC driver class for MySQL. 
             Note: For modern MySQL versions, you may use `com.mysql.cj.jdbc.Driver`. -->

        <property name="hibernate.connection.password">Hema2728@2024</property>
        
        <!-- Sets the password for the database user. Ensure this is secured in production environments. -->

        <property name="hibernate.connection.url">jdbc:mysql://localhost:3306/samplehib01</property>
        
        <!-- Defines the JDBC URL for connecting to the database. 
             In this case, it connects to a MySQL database hosted on localhost on port 3306, 
             with the database name `samplehib01`. -->

        <property name="hibernate.connection.username">root</property>
        
        <!-- Specifies the username to connect to the database. -->

        <property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>
        
        <!-- Defines the SQL dialect used by Hibernate. 
             This helps Hibernate generate SQL queries optimized for MySQL. -->

        <property name="hibernate.order_inserts">true</property>
        
        <!-- Enables batch inserts to be ordered by the primary key. 
             Improves efficiency for batch processing. -->

        <property name="hbm2ddl.auto">update</property>
        
        <!-- Automatically validates or updates the database schema.
             Options include:
             - `validate`: Validates the schema, makes no changes.
             - `update`: Updates the schema to match the model.
             - `create`: Drops and recreates the schema each time.
             - `create-drop`: Drops the schema after the session ends. 
             Use cautiously in production environments. -->

        <property name="show_sql">true</property>
        
        <!-- Enables logging of the SQL statements generated by Hibernate.
             Useful for debugging and understanding the queries being executed. -->

    </session-factory>
    <!-- Ends the session-factory configuration -->

</hibernate-configuration>
<!-- Ends the Hibernate configuration -->
